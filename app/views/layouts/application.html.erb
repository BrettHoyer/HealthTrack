<!DOCTYPE html>
<html>
<head>
  <title>Meathead</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application", "jquery-1.8.3.min", "highcharts" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='navbar-inverse'>
	<nav class='navbar-inner'>
		<%= link_to "New Body Part", new_category_url, :class => 'navbutton' %>
		<%= link_to "New Exercise", new_exercise_url, :class => 'navbutton'   %>
		<%= link_to "Running", runs_url, :class => 'navbutton'  %>
		<%= link_to "Lifting", exercises_url, :class => 'navbutton' %>
		<div class='loginlogout'>
			<% if session[:user_id] %>
		Welcome, <%= User.find_by_id(session[:user_id]).name.split(' ').map {|w| w.capitalize }.join(' ') %>. 

		<%= link_to "Logout", sessions_destroy_url, :class => 'navbutton' %>
		
		 <% else %>
		<%= link_to "Login", sessions_new_url, :class => 'navbutton' %>
		
		<% end %>
		</div> 

	</nav>
  </div>
<div class='container-fluid'>
<%= yield %>
</div>
</body>
</html>
