  </div>
  <div class="field">
    <%= f.label :time, "Time (HH:MM:SS)" %>
    <%= f.text_field :time %>
  </div>
  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div> 
  <div class="actions">
    <%= f.submit "Submit", :class => 'smallbutton' %>
  </div>
<% end %>
