<%= form_for(@run) do |f| %>
  <% if @run.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@run.errors.count, "error") %> prohibited this run from being saved:</h2>

      <ul>
      <% @run.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :user_id, :value => session[:user_id] %>
  </div>
  <div class="field">
    <%= f.label :distance, "Miles" %><br />
    <%= f.text_field :distance %>
  </div>
  <div class="field">
    <%= f.label :time, "Time (HH:MM:SS)" %><br />
    <%= f.text_field :time %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div> 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
