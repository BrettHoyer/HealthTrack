
  <h1><%= User.find_by_id(session[:user_id]).name.split(' ').map {|w| w.capitalize }.join(' ') %>'s Exercises</h1>

  <% @categories.each do |category| %>
    <h3><%= category.name %></h3>
    <%= link_to "Delete Category", category_url(category.id), :method => 'delete', :confirm => 'Are you sure?' %>

    <% category.exercises.each do |exercise| %>
     
    <div class='exercisetable'>    <h5><%= exercise.name %></h5>
        <table border='1'>
           <tr>
              <th class="label">Set Number:</th> 
              <th class="label label-info">Number of Reps:</th>
              <th class="label label-success">Weight:</th>  
              <th class="label label-default">Date:</th> 
            </tr>  
          <% exercise.turns.each do |turn| %>
            <tr>  
              <td><%= turn.turn_num %></td>
              <td><%= turn.reps %></td>
              <td><%= turn.weight %></td>
              <td><%= turn.date.strftime("%m/%d/%y") %></td>
              <td>
                 <%= link_to 'Show', turn %>
                <%= link_to 'Edit', edit_turn_path(turn, :exercise_id => exercise.id) %>
                <%= link_to 'Destroy', turn, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
          <% end %>
        </table><br />
      <%= link_to "New Set", new_turn_url(:exercise_id => exercise.id), :class => 'btn btn-mini btn-danger' %>  
    </div>
    <% end %>
   <% end %> 
    <br />


  <div id="chart_div" style="width: 900px; height: 500px;"></div>
  