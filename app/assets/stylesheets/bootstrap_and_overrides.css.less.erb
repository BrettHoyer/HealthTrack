@import "twitter/bootstrap/bootstrap";
@import "twitter/bootstrap/responsive";

// Set the correct sprite paths
@iconSpritePath: asset-path("twitter/bootstrap/glyphicons-halflings.png");
@iconWhiteSpritePath: asset-path("twitter/bootstrap/glyphicons-halflings-white.png");

// Set the Font Awesome (Font Awesome is default. You can disable by commenting below lines)
// Note: If you use asset_path() here, your compiled boostrap_and_overrides.css will not
//       have the proper paths. So for now we use the absolute path.
@fontAwesomeEotPath: asset-path("fontawesome-webfont.eot");
@fontAwesomeWoffPath: asset-path("fontawesome-webfont.woff");
@fontAwesomeTtfPath: asset-path("fontawesome-webfont.ttf");
@fontAwesomeSvgPath: asset-path("fontawesome-webfont.svg");

// Font Awesome
@import "fontawesome";

// Your custom LESS stylesheets goes here
//
// Since bootstrap was imported above you have access to its mixins which
// you may use and inherit here
//
// If you'd like to override bootstrap's own variables, you can do so here as well
// See http://twitter.github.com/bootstrap/customize.html#variables for their names and documentation
//
// Example:
// @linkColor: #ff0000;


@font-face {
    font-family: 'Aaargh';
    src: url('Aaargh-webfont.eot');
    src: url('<%= asset_path('Aaargh-webfont.eot?#iefix') %>') format('embedded-opentype'),
         url('<%= asset_path('Aaargh-webfont.woff') %>') format('woff'),
         url('<%= asset_path('Aaargh-webfont.ttf') %>') format('truetype'),
         url('<%= asset_path('Aaargh-webfont.svg#AaarghNormal') %>') format('svg');
    font-weight: normal;
    font-style: normal;

}

@font-face {
  font-family: "FontAwesome";
  src: url('<%= asset_path('fontawesome-webfont.eot') %>');
  src: url('<%= asset_path('fontawesome-webfont.eot') + '?#iefix' %>') format('eot'), 
  url('<%= asset_path('fontawesome-webfont.woff') %>') format('woff'), 
  url('<%= asset_path('fontawesome-webfont.ttf') %>') format('truetype'), 
  url('<%= asset_path('fontawesome-webfont.svg') + '#FontAwesome' %>') format('svg');
  font-weight: normal;
  font-style: normal;
}

a {
	color: #545F6D;
	&:hover{
	background: rgba(0, 255, 255, .2);
	text-decoration: none;
	}
	&:active{
	background-color:green;
	}
}

/*Navbar*/

.navbar{
	background: -webkit-linear-gradient(rgba(0, 255, 255, .8), white);
	-webkit-box-shadow: 0px 0px 10px rgba(0, 255, 255, .8);
	min-height: 40px;
  	padding: 20px 10px 0px 10px;
  	margin-bottom: 0;
}

.loginlogout{
	float:right;
}

nav p{
	display: inline;
}

.navbutton {
	border: 1px solid black;
	border-radius: 5px;
	-webkit-box-shadow: inset -1px 0 10px rgba(0, 0, 0, 0.4);
	padding: 5px 7px 4px 5px;
	font-size: 17px;
	font-family: 'Molle';
	font-style: italic;
	font-weight: 400;
	background: -webkit-linear-gradient(#687587, #404853);
}

.smallbutton{
	border: 1px solid black;
	border-radius: 5px;
	-webkit-box-shadow: inset -1px 0 10px rgba(0, 0, 0, 0.4);
	padding: 2px 4px 2px 3px;
	font-size: 14px;
	font-family: 'Molle';
	font-style: italic;
	font-weight: 400;
	background: -webkit-linear-gradient(#687587, #404853);
}

.navbutton, .navbutton:visited, .smallbutton{
	color: white;
	text-shadow: 2px 1px 0 rgba(0, 0, 0, 0.6);
}

a.navbutton:hover{
	color: rgba(0, 255, 255, .8);
	background: -webkit-linear-gradient(#687587, #404853);
	text-decoration: none;
}

a.navbutton:visted{
	color: white;
	background: -webkit-linear-gradient(#687587, #404853);
	text-decoration: none;
}


/*Tables*/


.exercisetable{
	
	margin-bottom: 0px;
}


table{
	margin-left:100px;
	border-collapse: separate;
	border-spacing: 0;
}



th, td{
	vertical-align: top;
}

th{
	background: silver;
	text-align: center;
	font-family: 'Aaargh', 'sans serif';
	font-weight: 700;
	font-size: 14px; 
	padding: 5px 10px;
	color: white;
	text-shadow: 1px 1px 0 rgba(0, 255, 255, 0.3);
	border-left: 1px solid rgba(0, 0, 0, 0.2);
  	border-right: 1px solid rgba(255, 255, 255, 0.1);
}

th:first-child{
	-webkit-border-radius: 6px 0 0 0;
	border-radius: 6px 0 0 0;
}

th:last-child{
	-webkit-border-radius: 0 6px 0 0;
	border-radius: 0 6px 0 0;
}


td{
	&.turnnum, &.turnreps, &.turnweight, &.turndate, &.tablecontrols{
	font-family: 'FontAwesome';
	padding: 8px;
	border-bottom: 1px solid #c6c9cc;
	border-left: 1px solid #e4e7eb;
	border-right: 1px solid rgba(255, 255, 255, 0.9);
 	-webkit-box-shadow: inset 0 1px 0 rgba(0, 255, 255, 0.6);
 	color: #545F6D;
	text-align: center;
	vertical-align: middle;
 	}
}	


tr:nth-child(even) td {
	background: #e8eae9
}

tr:nth-child(odd) td {
	background: rgba(0, 255, 255, .1)
}

table tr:last-child td:last-child{
	border-radius: 0px 0px 8px 0px;
}

table tr:last-child td:first-child{
	border-radius: 0px 0px 0px 8px;
}
table tr:first-child td:last-child{
	border-radius: 0px 8px 0px 0px;
}


/*Headings*/


h1{
	font-size: 45px;
	text-align: center;
	font-family: 'Aaargh';
	color: #545F6D;
	text-shadow: 2px 2px 1px silver;
}

h3{
	display: inline-block;
	margin: 0 3px 0 10px;	
	font-family: 'Molle';
	font-style: italic;
	font-weight: 400; 
	line-height: 30px;
	vertical-align: middle;
	&:hover{
	-webkit-border-radius: 8px;
	}
}

h5{
	font-family: 'Aaargh';
	display: inline-block;
	font-size: 15px;
	margin-top: 10px;
	padding: 2px;
	color: #545F6D;
	border: 1px dotted rgba(0, 255, 255, 1);
}

.categoryheader{
	position: relative;
	display: inline;
	text-align: center;
	vertical-align: middle;
	left:40%;
}


/*Buttons*/


.icon-double-angle-up, .icon-double-angle-down{
	position: relative;
	bottom: 3px;
	border: 1px solid rgba(0, 255, 255, .7);
	-webkit-box-shadow: 0 0 3px 1px black;
	color: white;
	background: #545F6D;
	line-height: 20px;
	width: 20px;
	height: 20px;
	font-size: 10px;
	padding: 3px 5px;
	border-radius: 50%;
	color: white
}

.icon-plus, .icon-minus{
	position: relative;
	bottom: 3px;
	border: 1px solid rgba(0, 255, 255, .7);
	-webkit-box-shadow: 0 0 3px 1px black;
	color: white;
	background: #545F6D;
	line-height: 20px;
	width: 20px;
	height: 20px;
	font-size: 10px;
	padding: 3px 4px;
	border-radius: 50%;
	color: white;
	text-align: center;
}

[class^="icon-"]::before, [class*=" icon-"]::before {
	text-align: center;
	display: inline;
}
.exercisetable > .icon-trash{
	margin-left: 100px;
}

.buttonadd, 
.buttonremove {
	display: inline-block;
	position: relative;
	bottom:2px;
	background: -webkit-linear-gradient(#687587, #404853);
	-webkit-box-shadow: 0 0 0px 1px rgba(194, 194, 194, .6);
	text-shadow: 1px 1px rgba(0, 0, 0, .7);
	width: 20px;
	height: 20px;
	border-radius: 10px;
	color: white;
	font-size: 10px;
	font-weight: bold;
	text-align: center;
	vertical-align: middle;
	line-height: 20px;
	&:hover{
		color: rgba(0, 255, 255, .8);
	}
	&.show{
		position: relative;
		left: 40%
	}
}

/*General*/

body{
	background: url(brillant.png);
	width:950px;
	margin: 0 auto;
	font-family: 'Libre Baskerville', serif;

}

/*Login and Signup Forms*/

.new-user-form{
	position: relative;
	margin: 10px auto;
	padding: 5px;
	width: 400px;
	background: lightgrey;
	-webkit-box-shadow: inset 0px 0px 3px 1px grey;
	border-radius: 6px;
	margin-top: 15px;
	text-align: right;
}

.login-form{
	position: relative;
	margin: auto;
	padding: 10px;
	width: 300px;
	background: lightgrey;
	-webkit-box-shadow: inset 0px 0px 3px 1px grey;
	border-radius: 6px;
	margin-top: 15px;
	text-align: right;
}

.new-user-form label, .new-user-form input{
	position: relative;
	display: inline-block;
}


.login-form label, .login-form input{
	position: relative;
	display: inline;
}








.container-fluid{
	position: block;
	padding: 10px 10px 10px 10px;		
	-webkit-box-shadow: 0px 0px 10px rgba(0, 255, 255, .8);
}


#run_distance:focus{
	border: 1px solid green;
}

.newset{
	display: none;
}


#turn_turn_num, #turn_reps, #turn_weight, #turn_date_1i, #turn_date_2i, #turn_date_3i{
	width: 100px;
	height: 25px;
	margin: 3px 0;
	display: inline-block;
	position: relative;
}

#new_set{
	display: none;
	margin: 0 0 5px 100px;
}

#new_set .field,  #new_set .actions{
	display: inline-block;
}

div.field{
	display: inline-block;
	position: relative;
	vertical-align: top;
}

option{
	text-align: center
}

.turnedit{
	margin-left: 100px;
	display: block;
}

.turnedit .actions{
	display: inline-block;
}

form{
	margin: 5px 5px 5px 0px; 
}

html {
    overflow-y: scroll;
}

#newexercise form{
	margin-left: 100px;
	display:inline;
}

#newexercise .actions{
	display: inline;
}

@media only screen and (max-width: 400px){
	body{
		margin: auto;
		padding: 0;
		width: auto;
	}

	.container-fluid{
		margin: 0 auto;
	}

	table{
		margin-left: 0px;
	}
	[class^="icon-"]::before, [class*=" icon-"]::before {
	text-align: center;
	display: inline;
	}

	.exercisetable{
		margin-left: 0;
		margin-bottom: 7px;
	}

	.exercisetable > .icon-trash{
	margin-left: 20px;
	}

	#new_set{
		margin-left: 0px
	}

	#turn_turn_num, #turn_reps, #turn_weight, #turn_date_1i, #turn_date_2i, #turn_date_3i{
	width: 50px;
	height: 25px;
	margin: 3px 0;
	display: inline-block;
	position: relative;
	}

	#newexercise div {
		display: block
	}

	#exerciseall{
		margin:0;
		padding:0;
	}

	th{
		vertical-align: middle;
		padding: 3px; 
		font-size: 14px;
	}

	td{
		padding: 0px
	}

	.navbutton{
		padding: 2px 3px 2px 3px;
		font-size: 14px;
	}

	nav p{
		display: none;
	}

	h1{
		font-size: 36px;
	}

	h3{
		font-size:28px;
		margin-left: 0px;
	}

	h5{
		font-size: 18px;
	}

	.icon-plus, .icon-minus{
	position: relative;
	margin-left: 5px;
	bottom: 3px;
	border: 1px solid rgba(0, 255, 255, .7);
	-webkit-box-shadow: 0 0 3px 1px black;
	color: white;
	background: #545F6D;
	line-height: 50px;
	width: 50px;
	height: 50px;
	font-size: 12px;
	padding: 7px 9px;
	border-radius: 25px;
	color: white;
	text-align: center;
	}


	.icon-double-angle-up, .icon-double-angle-down{
	position: relative;
	margin-left: 5px;
	bottom: 3px;
	border: 1px solid rgba(0, 255, 255, .7);
	-webkit-box-shadow: 0 0 3px 1px black;
	color: white;
	background: #545F6D;
	line-height: 50px;
	width: 50px;
	height: 50px;
	font-size: 12px;
	padding: 7px 10px;
	border-radius: 25px;
	color: white
	}

	.new-user-form{
		margin: 0;
		width: auto;
		font-size: 12px;
	}
	.login-form{
		width:250px;
		margin: auto;
		font-size: 12px
	}
	.new-user-form input, .login-form input{
		width: 150px;
	}

}