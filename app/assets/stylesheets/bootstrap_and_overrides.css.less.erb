@import "twitter/bootstrap/bootstrap";
@import "twitter/bootstrap/responsive";

// Set the correct sprite paths
@iconSpritePath: asset-path("twitter/bootstrap/glyphicons-halflings.png");
@iconWhiteSpritePath: asset-path("twitter/bootstrap/glyphicons-halflings-white.png");

// Set the Font Awesome (Font Awesome is default. You can disable by commenting below lines)
// Note: If you use asset_path() here, your compiled boostrap_and_overrides.css will not
//       have the proper paths. So for now we use the absolute path.
@fontAwesomeEotPath: asset-path("fontawesome-webfont.eot");
@fontAwesomeWoffPath: asset-path("fontawesome-webfont.woff");
@fontAwesomeTtfPath: asset-path("fontawesome-webfont.ttf");
@fontAwesomeSvgPath: asset-path("fontawesome-webfont.svg");

// Font Awesome
@import "fontawesome";

// Your custom LESS stylesheets goes here
//
// Since bootstrap was imported above you have access to its mixins which
// you may use and inherit here
//
// If you'd like to override bootstrap's own variables, you can do so here as well
// See http://twitter.github.com/bootstrap/customize.html#variables for their names and documentation
//
// Example:
// @linkColor: #ff0000;

@font-face {
	font-family: 'Aaargh';
	src: url('<%= asset_path('Aaargh-webfont.ttf') %>');
	font-weight: normal;
	font-size: normal;
}

.navbar{
	background: -webkit-linear-gradient(rgba(0, 255, 255, .8), white);
	-webkit-box-shadow: 0px 0px 10px rgba(0, 255, 255, .8);
	min-height: 40px;
  	padding: 20px 10px 0px 10px;
  	margin-bottom: 0;
}

.loginlogout{
	float:right;
}

.navbutton {
	border: 1px solid black;
	border-radius: 5px;
	-webkit-box-shadow: inset -1px 0 10px rgba(0, 0, 0, 0.4);
	padding: 5px;
	font-size: 17px;
	font-family: 'Molle';
	font-style: italic;
	font-weight: 400;
	background: -webkit-linear-gradient(#687587, #404853);
}

a.navbutton, a.navbutton:visited{
	color: white;
	text-shadow: 2px 1px 0 rgba(0, 0, 0, 0.6);
}

a.navbutton:hover{
	color: rgba(0, 255, 255, .8);
	text-decoration: none;
}

.exercisetable{
	margin-left:100px;
	margin-bottom: 30px;
}


table{
	border-collapse: separate;
	border-spacing: 0;
}



th, td{
	vertical-align: top;
}

th{
	background: silver;
	text-align: center;
	font-family: 'Aaargh', 'sans serif';
	font-weight: 700;
	font-size: 16px; 
	padding: 5px 10px;
	color: white;
	text-shadow: 1px 1px 0 rgba(0, 255, 255, 0.3);
	border-left: 1px solid rgba(0, 0, 0, 0.2);
  	border-right: 1px solid rgba(255, 255, 255, 0.1);
}

th:first-child{
	-webkit-border-radius: 6px 0 0 0;
	border-radius: 6px 0 0 0;
}

th:last-child{
	-webkit-border-radius: 0 6px 0 0;
	border-radius: 0 6px 0 0;
}


td{
	&.turnnum, &.turnreps, &.turnweight, &.turndate{
	padding: 8px;
	border-bottom: 1px solid #c6c9cc;
	border-left: 1px solid #e4e7eb;
	border-right: 1px solid rgba(255, 255, 255, 0.9);
 	-webkit-box-shadow: inset 0 1px 0 rgba(0, 255, 255, 0.6);
 	color: grey;
	text-align: center;
	vertical-align: middle;
 	}
}	


tr:nth-child(even) td {
	background: #e8eae9
}

tr:nth-child(odd) td {
	background: rgba(0, 255, 255, .1)
}


.tablecontrols td{
	background: white;
}

body{
	background: url(brillant.png);
	width:950px;
	margin: 0 auto;
	font-family: 'Libre Baskerville', serif;

}

h1{
	text-align: center;
	font-family: 'Aaargh';
	font-weight: bold;
	color: #545F6D;
	text-shadow: 2px 2px 1px silver;
}

.container-fluid{
	padding: 10px;		
	-webkit-box-shadow: 0px 0px 10px rgba(0, 255, 255, .8);
}

a:hover {
	background-color: orange;
	text-decoration: none;
}

#run_distance:focus{
	border: 1px solid green;
}

a:active{
	background-color:green;
}

